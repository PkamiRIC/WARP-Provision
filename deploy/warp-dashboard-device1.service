[Unit]
Description=WARP Dashboard Device 1 (Vite)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
WorkingDirectory=/opt/warp/app/dashboard-device1
ExecStart=/usr/bin/npm run preview -- --host 0.0.0.0 --port 5171
Restart=always
EnvironmentFile=/etc/warp/env
Environment=NODE_ENV=production

[Install]
WantedBy=multi-user.target
